<project name="IDEA Coverage Agent" default="all">
  <property name="dist" value="${basedir}/dist"/>
  <property name="coverage.data.jar" value="${dist}/coverage-agent.jar"/>
  <property name="instrumenter.jar" value="${dist}/instrumenter.jar"/>
  <property name="src.dst" value="${dist}/coverage-src.zip"/>
  <property name="build.rt.classes.dir" value="${basedir}/classes"/>
  <target name="all">
    <delete dir="${coverage.data.jar}"/>
    <delete dir="${instrumenter.jar}"/>
    <mkdir dir="${dist}"/>

    <jar destfile="${coverage.data.jar}">
      <manifest>
        <attribute name="Premain-Class" value="com.intellij.rt.coverage.main.CoveragePremain"/>
        <attribute name="Boot-Class-Path" value="coverage-agent.jar"/>
      </manifest>

      <fileset dir="${build.rt.classes.dir}" includes="com/intellij/rt/coverage/data/**"/>
      <fileset dir="${build.rt.classes.dir}" includes="com/intellij/rt/coverage/main/**"/>
      <fileset dir="${build.rt.classes.dir}" includes="com/intellij/rt/coverage/util/**"/>
    </jar>
    <jar destfile="${instrumenter.jar}">
      <fileset dir="${build.rt.classes.dir}" includes="com/intellij/rt/coverage/instrumentation/**"/>
    </jar>

    <delete file="${src.dst}"/>
    <property name ="temp.src" value="${dist}/src/com/intellij/rt/coverage"/>
    <mkdir dir="${temp.src}"/>
    <copy todir="${temp.src}" includeemptydirs="true">
        <fileset dir="${basedir}/src" includes="data/**"/>
        <fileset dir="${basedir}/src" includes="instrumentation/**"/>
        <fileset dir="${basedir}/src" includes="main/**"/>
        <fileset dir="${basedir}/src" includes="util/**"/>
    </copy>
    <zip destfile="${src.dst}">
       <fileset dir="${dist}/src" includes="com/intellij/rt/coverage/**"/>
    </zip>
    <delete dir="${dist}/src"/>

    <copy todir="${dist}" file="${basedir}/lib/asm.jar"/>
    <copy todir="${dist}" file="${basedir}/lib/asm-tree-3.0.jar"/>
    <copy todir="${dist}" file="${basedir}/lib/asm-commons.jar"/>
    <copy todir="${dist}" file="${basedir}/lib/trove4j.jar"/>
  </target>
</project>

